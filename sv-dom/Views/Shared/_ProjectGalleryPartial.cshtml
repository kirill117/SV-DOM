@model IEnumerable<Models.SampleImageModel>

<script type="text/javascript">

		jQuery(document).ready(function(){
		    $('.btn-gallery').on('click', function (e) {
		        e.preventDefault();

		        $.fancybox.open([
                    @foreach (var item in Model)
                    {
                        <text>
                        {
                            src: '@item.Name',
                            opts: {
                                caption: '@item.Comment',
                                thumb: '@item.Name'
                            }
                        },
                    </text>
                    }
		        ], {
                    loop: true,
                    hash: "gallery",
                    protect: true,
		            thumbs : {
		                autoStart   : true,                  
		                hideOnClose : false,                   
		                axis        : 'y'                    
		            },

                });
            });

		});

</script>




